<Templates imagesBasePath="fck_template/images/">
		<Template title="Image w/credit">
				<Description>Inserts code necessary to display a credited image.</Description>
				<Html>
						<![CDATA[
								<div class="imagebox">
										<img height="100" width="100" /><br class="clear" />
										<div class="imagecredit">Photo courtesy of {Credit Name}</div>
								</div>
						]]>
				</Html>
		</Template>
		<Template title="Image in 'aside' box w/caption and credit, text wraps to the right">
				<Description>Inserts code necessary to display a captioned, credited image.</Description>
				<Html>
						<![CDATA[
								<div class="imageboxaside left">
										<div class="imagecaption">{Image Caption}</div>
										<img height="100" width="100" /><br class="clear" />
										<div class="imagecredit">Photo courtesy of {Credit Name}</div>
								</div>
								<p>{some text here}</p>
						]]>
				</Html>
		</Template>
		<Template title="Image in 'aside' box w/caption and credit, text wraps to the left">
				<Description>Inserts code necessary to display a captioned, credited image.</Description>
				<Html>
						<![CDATA[
								<div class="imageboxaside right">
										<div class="imagecaption">{Image Caption}</div>
										<img height="100" width="100" /><br class="clear" />
										<div class="imagecredit">Photo courtesy of {Credit Name}</div>
								</div>
								<p>{some text here}</p>
						]]>
				</Html>
		</Template>
</Templates>
